<div class="chat-header">
  <div class="left-header">
    <div class="chat-name">hogefuga</div>
  </div>
  <div class="right-header">
    <div class="chat-end">
      <a href="#">チャット終了</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="dete">
      <div class="name">
        Tom
      </div>
      <div class="day">
        2020/11/28(sat) 17:46:00
      </div>
    </div>
    <div class="lower-message">
      <div class="text">
        おはよう
      </div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-message">
    <%= f.text_field :content, class: 'text-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>
